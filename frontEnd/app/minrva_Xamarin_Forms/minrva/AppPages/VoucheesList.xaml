<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="minrva.VoucheesList">
	<ScrollView>
		<StackLayout Padding="10,10,10,10" BackgroundColor="#EEEEEE">
			<Button Text="Back" Clicked="ClickedBack" HorizontalOptions="Start"/>
			<ListView x:Name="voucheeList" IsPullToRefreshEnabled="true" Refreshing="OnRefresh" >	
				<ListView.ItemTemplate>
						<DataTemplate>
		        		<ViewCell>
							<StackLayout BackgroundColor="White" HorizontalOptions="Fill" VerticalOptions="Center" Padding="0,0,0,2" Margin="0,10,0,0">
								<Label Text="{Binding Vouchee}" HorizontalTextAlignment="Center" BackgroundColor="#b35050" TextColor="White"/>
								<Label Text="{Binding Voucher}" BackgroundColor="White"/>
							</StackLayout>
		        		</ViewCell>
						</DataTemplate>
		      	</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ScrollView>
</ContentPage>










	