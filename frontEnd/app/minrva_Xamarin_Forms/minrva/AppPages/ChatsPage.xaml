<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="minrva.ChatsPage">
	<StackLayout Padding="10,20,10,10" BackgroundColor="#EEEEEE">
		<Label Text="Messages" HorizontalOptions="Center"/>
		<ActivityIndicator Grid.RowSpan="2"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="False"
                       IsEnabled="True"
                       x:Name="syncIndicator"/>
		<ListView x:Name="acceptedList" ItemSelected="OnSelected"
				IsPullToRefreshEnabled="true" Refreshing="OnRefresh" SeparatorVisibility="None" BackgroundColor="#EEEEEE">
      		<ListView.ItemTemplate>
        		<DataTemplate>
					<ViewCell>
						<StackLayout BackgroundColor="White" HorizontalOptions="Fill" VerticalOptions="Center" Padding="0,0,0,50" Margin="0,10,10,0">
							<Label Text="{Binding Recipient.FirstName}" HorizontalTextAlignment="Center" BackgroundColor="#b35050" TextColor="White"/>
							<Label Text="{Binding RequestedItem.Name}" HorizontalTextAlignment="Center" BackgroundColor="White" FontSize="Small"/>
						</StackLayout>
					</ViewCell>
        		</DataTemplate>
      		</ListView.ItemTemplate>
    	</ListView>
	</StackLayout>
</ContentPage>
