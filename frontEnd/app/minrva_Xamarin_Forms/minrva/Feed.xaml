<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="#b35050" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="minrva.Feed">
	<StackLayout Padding="10,20,10,10">
		<ActivityIndicator Grid.RowSpan="2"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="False"
                       IsEnabled="True"
                       x:Name="syncIndicator"/>
		<ListView BackgroundColor="Transparent" SeparatorColor="White" x:Name="feedList"
				ItemSelected="OnSelected"
				IsPullToRefreshEnabled="true" Refreshing="OnRefresh">
      		<ListView.ItemTemplate>
        		<DataTemplate>
          			<TextCell TextColor="White" DetailColor="White" Text="{Binding Name}" Detail="{Binding Location}"/>
        		</DataTemplate>
      		</ListView.ItemTemplate>
    	</ListView>
	</StackLayout>
</ContentPage>